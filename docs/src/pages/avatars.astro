        <div class="w-12">
          <img
            src={`https://api.dicebear.com/7.x/avataaars-neutral/svg?seed=${globalThis.crypto.randomUUID()}`}
          />
        </div>
      </div>
      <div class="avatar avatar-placeholder">
        <div class="w-12">
          <p>+99</p>
        </div>
      </div>
    </div>
  </Preview>
  <Preview title="Avatar Placeholder">
    <div class="avatar avatar-placeholder">
      <div class="w-32 rounded-md">
        <p class="text-3xl">JD</p>
      </div>
    </div>
    <div class="avatar avatar-placeholder">
      <div class="w-24 rounded-md">
        <p class="text-xl">JD</p>
      </div>
    </div>
    <div class="avatar avatar-placeholder">
      <div class="w-16 rounded-md">
        <p>JD</p>
      </div>
    </div>
    <div class="avatar avatar-placeholder">
      <div class="w-8 rounded-md">
        <p class="text-xs">JD</p>
