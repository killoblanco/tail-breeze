    ]
  }
}
---

<style>
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-flow: row;
    gap: theme("spacing.2");
  }
  ul [open] summary {
    margin-bottom: theme("spacing.2");
  }

  ul ul {
    margin-left: theme("spacing.4");
  }
</style>


<ul class="text-body-2">
  {Object.entries(NavItems).map(function parseItems ([key, value]) {
    return (
      <li>
        <details open>
          <summary>{key.replaceAll('-', ' ')}</summary>
          <ul>
            {Array.isArray(value)
              ? value.map((item) => (
                <li>
                  <a class={styles.btn} href={`/${item.toLocaleLowerCase()}`}>
                    {item.replaceAll('-', ' ')}
                  </a>
                </li>
              ))
              : Object.entries(value).map(parseItems)
            }
          </ul>
        </details>
      </li>
    )
  })}
</ul>
