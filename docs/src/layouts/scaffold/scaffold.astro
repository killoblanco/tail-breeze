---
import Html from "../html.astro";
import Navbar from "./components/navbar.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Html title={title}>
  <section
    class="w-screen h-screen grid grid-cols-[minmax(max-content,_240px)_repeat(2,_1fr)] grid-rows-[auto_1fr] gap-8 pb-4"
  >
  <header class="app-bar col-span-3 row-span-1">
    <h6>TailBreeze</h6>
    <div class="flex-grow"></div>
    <theme-toggle class="btn btn-text rounded-full p-2" />
  </header>
    <aside class="col-span-1 row-span-2 overflow-hidden overflow-y-auto px-2">
      <Navbar />
    </aside>
    <main class="col-span-2 row-span-2 overflow-hidden overflow-y-auto">
      <section class="mx-auto max-w-4xl grid grid-cols-1 auto-rows-auto gap-8 pr-1.5">
        <slot />
      </section>
    </main>
  </section>
</Html>


<script src="../../components/theme-toggle.ts"></script>
